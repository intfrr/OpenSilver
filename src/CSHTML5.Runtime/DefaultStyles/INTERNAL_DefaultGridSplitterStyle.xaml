<!-- Source: https://github.com/Microsoft/UWPCommunityToolkit/tree/master/Microsoft.Toolkit.Uwp.UI.Controls/GridSplitter -->

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--<Style x:Key="DefaultGridSplitterStyle" TargetType="local:GridSplitter">-->
    <Style TargetType="GridSplitter">
        <Setter Property="IsTabStop"
                Value="False"></Setter>
        <Setter Property="Background"
                Value="#FFF0F0F0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GridSplitter">
                    <Grid Background="{TemplateBinding Background}">
                        <Thumb x:Name="PART_Thumb"
                               Opacity="0" />
                        <!--Note: the thumb control is here only in CSHTML5-->
                        <ContentPresenter Content="{TemplateBinding Element}"
                                          IsHitTestVisible="False" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
